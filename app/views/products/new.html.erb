<h1 class="background-h1">Crear Nueva Transacción</h1>

<div class="form-container">
  <%= render "form", product: @product %>
</div>

<div class="form-actions">
  <%= link_to "Regresar a los productos", products_path, class: 'btn-back' %>
</div>

<style>
  body {
    background-color: #f4f7fa;
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
  }

  .background-h1 {
    text-align: center;
    margin-bottom: 20px;
    font-family: 'Arial', sans-serif;
    color: white; /* Cambié el color a blanco */
  }

  .form-container {
    max-width: 600px;
    margin: 30px auto;
    background-color: #ffffff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s;
  }

  .form-container:hover {
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.15);
  }

  .form-container h1 {
    text-align: center;
    margin-bottom: 20px;
    color: #007BFF; /* Mantener el color azul */
  }

  .form-group {
    margin-bottom: 20px;
  }

  label {
    display: block;
    margin-bottom: 8px;
    font-weight: bold;
    color: #343a40;
  }

  input[type="text"],
  textarea {
    width: 100%;
    padding: 12px;
    border: 2px solid #000;
    border-radius: 5px;
    box-sizing: border-box;
    font-size: 14px;
    transition: border-color 0.3s;
  }

  input[type="text"]:focus,
  textarea:focus {
    border-color: #007BFF;
    outline: none;
  }

  button,
  .btn-back {
    background-color: #007BFF; /* Azul para botones */
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s;
    font-weight: bold;
  }

  button:hover,
  .btn-back:hover {
    background-color: #0056b3;
  }

  .form-actions {
    text-align: center;
    margin-top: 20px;
  }

  .btn-back {
    background-color: #dc3545; /* Color rojo para el botón de regreso */
    margin-top: 15px;
  }

  .btn-back:hover {
    background-color: #c82333;
  }
</style>
