<style>
body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
    font-family: Arial, sans-serif;
    background-color: #e0f7fa;
}

.login-container {
    display: flex;
    width: 100%;
    height: 100%;
}

.left-column {
    flex: 1;
    background-color: #e0f7fa;
    background-image: url(<%= asset_path('login.jpg') %>);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    text-align: center;
    position: relative;
}

.text-overlay {
    background-color: rgba(0, 0, 0, 0.6);
    padding: 20px;
    border-radius: 10px;
}

h2 {
    font-size: 2.5rem;
    font-weight: bold;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    margin: 0;
}

p {
    font-size: 1.2rem;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
}

.right-column {
    flex: 1;
    background-color: #003366;
    color: white;
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.form-group {
    margin-bottom: 15px;
    width: 100%;
}

.input-field {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

.submit-button {
    background-color: #007bff;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s;
}

.submit-button:hover {
    background-color: #0056b3;
}

.back-link {
    display: block;
    margin-top: 15px;
    color: #007bff;
    text-align: center;
    text-decoration: none;
}

.flash {
    background-color: #f44336;
    color: white;
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 4px;
    text-align: center;
    width: 100%;
}

.flash-success {
    background-color: #4caf50;
    color: white;
}
</style>

<div class="login-container">
  <div class="left-column">
    <div class="text-overlay">
      <h2>BIENVENIDO A TECHSOLUTIONS</h2>
      <p>Por favor, ingresa tus datos para continuar.</p>
    </div>
  </div>

  <div class="right-column">
    <!-- Muestra los mensajes flash si existen -->
    <% if flash[:notice] %>
      <div class="flash flash-success">
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="flash">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Formulario de inicio de sesión -->
    <%= form_with(url: login_path, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :username, "Nombre de usuario" %>
        <%= form.text_field :username, required: true, class: "input-field" %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Contraseña" %>
        <%= form.password_field :password, required: true, class: "input-field" %>
      </div>

      <div>
        <%= form.submit "Iniciar Sesión", class: "submit-button" %>
      </div>
    <% end %>

    <!-- Enlace para el registro de usuario -->
    <%= link_to "¿No tienes cuenta? Regístrate aquí", signup_path, class: "back-link" %>
  </div>
</div>
