<h1 style="text-align: center; margin-bottom: 20px; font-family: 'Arial', sans-serif; color: white;" class="background-h1">Información del Producto</h1>

<div class="product-details">
  <p style="color: green; font-weight: bold; text-align: center; font-size: 1.2em; margin-bottom: 20px;"><%= notice %></p>
  <%= render @product %>
  
  <div class="action-buttons">
    <%= link_to "Editar este producto", edit_product_path(@product), class: 'btn-edit' %>
    <%= link_to "Volver a productos", products_path, class: 'btn-back' %>
    <%= button_to "Eliminar este producto", @product, method: :delete, class: 'btn-delete', data: { confirm: '¿Estás seguro de que deseas eliminar este producto?' } %>
  </div>
</div>

<div id="successModal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <p><%= notice %></p>
  </div>
</div>

<style>
  body {
    background-color: #9fc0f5;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
  }

  h1 {
    color: #007BFF;
  }

  .product-details {
    margin: 20px auto;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    max-width: 600px;
  }

  .action-buttons {
    display: flex; /* Utiliza Flexbox para el layout */
    justify-content: center; /* Centra los botones horizontalmente */
    margin-top: 20px;
  }

  .action-buttons > a, 
  .action-buttons > form {
    margin: 0 10px; /* Espacio entre los botones */
  }

  .btn-edit {
    background-color: #28a745; /* Verde para el botón de Editar */
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s;
  }

  .btn-edit:hover {
    background-color: #218838; /* Verde más oscuro al pasar el mouse */
  }

  .btn-back {
    background-color: #007BFF; /* Azul para el botón de Volver */
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s;
  }

  .btn-back:hover {
    background-color: #0056b3; /* Azul más oscuro al pasar el mouse */
  }

  .btn-delete {
    background-color: #dc3545; /* Rojo para el botón de Eliminar */
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s;
  }

  .btn-delete:hover {
    background-color: #c82333; /* Rojo más oscuro al pasar el mouse */
  }

  .modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.4);
  }

  .modal-content {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 500px;
    border-radius: 8px;
  }

  .close-button {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close-button:hover,
  .close-button:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }
</style>
