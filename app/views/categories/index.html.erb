<h1 style="text-align: center; margin-bottom: 20px;">TechSolutions</h1>
<div style="text-align: right; margin-bottom: 20px;"> <!-- Aumentar el margen inferior -->
  <%= link_to 'Regresar', dashboard_path, class: 'btn-create' %>
</div>

<style>
  body {
    background-color: #9fc0f5; /* Nuevo color de fondo */
  }

  .table-container {
    width: 80%; /* Ancho de la tabla */
    margin: 20px auto; /* Centra la tabla en la página */
    background-color: rgba(255, 255, 255, 0.9); /* Fondo blanco con opacidad */
    padding: 20px; /* Espaciado alrededor de la tabla */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Sombra más pronunciada */
    border-radius: 8px; /* Bordes redondeados para un aspecto más suave */
  }

  table {
    width: 100%; /* Ancho completo dentro del contenedor */
    border-collapse: collapse; /* Colapsa bordes para una apariencia más limpia */
  }

  th, td {
    border: 2px solid #007BFF; /* Bordes azules */
    padding: 12px; /* Espaciado interno ajustado */
    text-align: left; /* Alineación del texto */
    font-weight: bold; /* Texto en negrita */
  }

  th {
    background-color: #007BFF; /* Color de fondo azul más oscuro para las cabeceras */
    color: white; /* Color de texto en blanco */
  }

  tr:nth-child(even) {
    background-color: #f7f9fc; /* Color de fondo más claro para filas pares */
  }

  tr:hover {
    background-color: #e0f7fa; /* Color al pasar el mouse */
  }

  .btn-create, .btn-edit, .btn-delete {
    background-color: #007BFF; /* Color azul más oscuro */
    color: white;
    padding: 5px 10px; /* Espaciado más pequeño para los botones */
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none; /* Elimina el subrayado en el link */
    display: inline-block; /* Cambia a bloque en línea */
    margin-left: 5px; /* Espacio entre botones */
  }

  .btn-create:hover, .btn-edit:hover, .btn-delete:hover {
    background-color: #0056b3; /* Color azul más oscuro al hacer hover */
  }

  .btn-delete {
    background-color: #dc3545; /* Color rojo para eliminar */
  }

  .btn-delete:hover {
    background-color: #c82333; /* Color rojo más oscuro al hacer hover */
  }
</style>

<div class="table-container">
  <div style="margin-bottom: 20px;"> <!-- Añadir margen inferior -->
    <%= link_to 'Nueva Categoria', new_category_path, class: 'btn-create', style: 'font-weight: bold;' %>
  </div>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Acciones</th> <!-- Nueva columna para acciones -->
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td>
            <%= link_to 'Editar', edit_category_path(category), class: 'btn-edit' %>
            <%= link_to 'Eliminar', category_path(category), method: :delete, data: { confirm: '¿Estás seguro de que deseas eliminar esta categoría?' }, class: 'btn-delete' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
