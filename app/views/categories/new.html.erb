<h1 style="text-align: center; margin-bottom: 20px; font-family: 'Arial', sans-serif; color: white;" class="background-h1">Crear Nueva Categoría</h1>

<div class="form-container">
  <%= form_with model: @category, local: true do |f| %>
    
    <div class="form-group">
      <%= f.label :name, "Nombre", class: 'form-label' %>
      <%= f.text_field :name, class: 'form-input', placeholder: "Ingresa el nombre de la categoría" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Descripción", class: 'form-label' %>
      <%= f.text_area :description, class: 'form-input', placeholder: "Ingresa una descripción de la categoría", rows: 5 %>
    </div>

    <div class="form-group" style="display: flex; justify-content: space-between; align-items: center;">
      <%= f.submit "Crear Categoría", class: 'btn-submit' %>
      <%= link_to "<i class='fas fa-arrow-left' style='font-size: 24px;'></i> Volver a categorías".html_safe, categories_path, class: 'btn-back btn-red' %>
    </div>
  <% end %>
</div>

<div id="successModal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <p><%= flash[:notice] %></p>
  </div>
</div>

<style>
  body {
    background-color: #f4f7fa;
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
  }

  h1 {
    color: #007BFF;
  }

  .form-container {
    margin: 20px auto;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    border: 2px solid rgba(0, 0, 0, 0.2); /* Contorno semi oscuro */
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-label {
    display: block; /* Asegura que las etiquetas ocupen toda la línea */
    margin-bottom: 5px; /* Espacio entre la etiqueta y el campo de entrada */
    font-weight: bold; /* Etiquetas en negritas */
  }

  .form-input {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 2px solid #ccc;
    border-radius: 5px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    resize: none; /* Evitar que el campo de descripción sea redimensionable */
    box-sizing: border-box; /* Evita que el campo se salga de la caja */
  }

  .form-input:focus {
    border-color: #007BFF;
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
    outline: none;
  }

  .btn-submit {
    background-color: #28a745;
    color: black; /* Texto en negro */
    padding: 10px 20px;
    border: 2px solid rgba(0, 0, 0, 0.2); /* Contorno semi oscuro */
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold; /* Texto en negritas */
    transition: background-color 0.3s ease, border-color 0.3s ease;
    margin-right: 10px; /* Espacio entre los botones */
  }

  .btn-submit:hover {
    background-color: #218838;
    border-color: rgba(0, 0, 0, 0.4); /* Contorno más oscuro al pasar el mouse */
  }

  .btn-back {
    padding: 10px 15px;
    border: 2px solid rgba(0, 0, 0, 0.2); /* Contorno semi oscuro */
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    font-weight: bold; /* Texto en negritas */
    color: black; /* Texto en negro */
    background-color: #dc3545; /* Rojo */
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .btn-back:hover {
    background-color: #c82333; /* Rojo más oscuro */
    border-color: rgba(0, 0, 0, 0.4); /* Contorno más oscuro al pasar el mouse */
  }

  /* Estilo para el modal */
  .modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.4);
  }

  .modal-content {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 500px;
    border-radius: 8px;
  }

  .close-button {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close-button:hover,
  .close-button:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }
</style>
