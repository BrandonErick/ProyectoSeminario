<h1 style="text-align: center; margin-bottom: 20px; font-family: 'Arial', sans-serif; color: white;" class="background-h1">Información del proveedor</h1>

<div class="form-container">
  <!-- Mensaje de éxito dentro del contenedor con negritas -->
  <p style="color: green; text-align: center; font-weight: bold;"><%= flash[:notice] %></p>

  <div class="supplier-details">
    <%= render @supplier %>
  </div>

  <div class="action-buttons" style="display: flex; justify-content: space-between; margin-top: 20px;">
    <%= link_to "Editar este proveedor", edit_supplier_path(@supplier), class: 'btn-edit' %>
    <%= link_to "Regresar a los proveedores", suppliers_path, class: 'btn-back' %>
    <%= button_to "Eliminar este proveedor", @supplier, method: :delete, class: 'btn-delete', data: { confirm: '¿Estás seguro de que deseas eliminar este proveedor?' } %>
  </div>
</div>

<!-- Modal para mensajes de éxito -->
<div id="successModal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <p><%= flash[:notice] %></p>
  </div>
</div>

<style>
  body {
    background-color: #f4f7fa; /* Color de fondo suave */
    font-family: 'Arial', sans-serif; /* Fuente general */
  }

  .form-container {
    max-width: 800px; /* Ancho máximo del formulario ajustado */
    margin: 30px auto; /* Centra el formulario en la página */
    background-color: rgba(255, 255, 255, 0.9); /* Fondo blanco */
    padding: 30px; /* Espaciado interno */
    border-radius: 10px; /* Bordes redondeados */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Sombra suave */
    transition: box-shadow 0.3s; /* Transición suave para la sombra */
  }

  .form-container:hover {
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.15); /* Sombra más profunda al pasar el mouse */
  }

  .action-buttons {
    display: flex;
    justify-content: space-between; /* Espaciado máximo para que los botones ocupen toda la fila */
    margin-top: 20px;
  }

  /* Botones */
  .btn-edit, .btn-back, .btn-delete {
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    font-weight: bold;
    min-width: 150px; /* Ancho mínimo para los botones */
    text-align: center;
  }

  .btn-edit {
    background-color: #28a745; /* Verde para el botón de editar */
  }

  .btn-edit:hover {
    background-color: #218838;
  }

  .btn-back {
    background-color: #007BFF; /* Azul para el botón de regresar */
  }

  .btn-back:hover {
    background-color: #0056b3;
  }

  .btn-delete {
    background-color: #dc3545; /* Rojo para el botón de eliminar */
  }

  .btn-delete:hover {
    background-color: #c82333;
  }

  /* Modal */
  .modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.4);
  }

  .modal-content {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 500px;
    border-radius: 8px;
  }

  .close-button {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close-button:hover,
  .close-button:focus {
    color: black;
    cursor: pointer;
  }
</style>
