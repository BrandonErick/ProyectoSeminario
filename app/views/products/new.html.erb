<h1 class="background-h1">Crear Nuevo Producto</h1>

<div class="form-container">
  <%= form_with model: @product, local: true do |f| %> <!-- Cambiado de @transaction a @product -->
    
    <div class="form-group">
      <%= f.label :name, "Nombre del Producto", class: 'form-label' %> <!-- Cambiado product_name a name -->
      <%= f.text_field :name, class: 'form-input', placeholder: "Ingresa el nombre del producto" %>
    </div>

    <div class="form-group">
      <%= f.label :quantity, "Cantidad", class: 'form-label' %> <!-- Cambiado amount a quantity -->
      <%= f.number_field :quantity, class: 'form-input', placeholder: "Ingresa la cantidad" %>
    </div>

    <div class="form-group">
      <%= f.label :price, "Precio", class: 'form-label' %>
      <div class="price-field-container">
        <span class="currency-symbol">$</span>
        <%= f.number_field :price, class: 'form-input price-input', placeholder: "Ingresa el precio" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :sku, "SKU", class: 'form-label' %>
      <%= f.text_field :sku, class: 'form-input', placeholder: "Ingresa el SKU" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Descripción", class: 'form-label' %>
      <%= f.text_area :description, class: 'form-input', placeholder: "Ingresa una descripción", rows: 5 %>
    </div>

    <div class="form-group" style="display: flex; justify-content: space-between; align-items: center;">
      <%= f.submit "Crear Producto", class: 'btn-submit' %>
      <%= link_to "<i class='fas fa-arrow-left' style='font-size: 24px;'></i> Regresar a los productos".html_safe, products_path, class: 'btn-back btn-red' %>
    </div>

  <% end %>
</div>

<div id="successModal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <p><%= flash[:notice] %></p>
  </div>
</div>

<style>
  body {
    background-color: #f4f7fa;
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
  }

  .background-h1 {
    text-align: center;
    margin-bottom: 20px;
    font-family: 'Arial', sans-serif;
    color: white;
  }

  .form-container {
    max-width: 600px;
    margin: 30px auto;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border: 2px solid rgba(0, 0, 0, 0.2);
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #343a40;
  }

  .form-input {
    width: 100%;
    padding: 12px;
    border: 2px solid #ccc;
    border-radius: 5px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    box-sizing: border-box;
    font-size: 16px;
  }

  .form-input:focus {
    border-color: #007BFF;
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
    outline: none;
  }

  .price-field-container {
    display: flex;
    align-items: center;
  }

  .currency-symbol {
    font-size: 16px;
    margin-right: 8px;
  }

  .price-input {
    width: calc(100% - 24px);
  }

  .btn-submit {
    background-color: #28a745;
    color: black;
    padding: 12px 20px;
    border: 2px solid rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
    transition: background-color 0.3s ease, border-color 0.3s ease;
    margin-right: 10px;
  }

  .btn-submit:hover {
    background-color: #218838;
    border-color: rgba(0, 0, 0, 0.4);
  }

  .btn-back {
    padding: 12px 20px;
    background-color: #dc3545;
    color: black;
    border: 2px solid rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .btn-back i {
    margin-right: 8px;
  }

  .btn-back:hover {
    background-color: #c82333;
    border-color: rgba(0, 0, 0, 0.4);
  }

  /* Modal styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
  }

  .modal-content {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 500px;
    border-radius: 8px;
  }

  .close-button {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close-button:hover,
  .close-button:focus {
    color: black;
    cursor: pointer;
  }
</style>
