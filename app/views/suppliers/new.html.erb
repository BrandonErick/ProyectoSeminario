<h1 style="text-align: center; margin-bottom: 20px; font-family: 'Arial', sans-serif; color: white;" class="background-h1">Crear Nuevo Proveedor</h1>

<div class="form-container">
  <%= form_with model: @supplier, local: true do |f| %>

    <div class="form-group">
      <%= f.label :name, "Nombre del Proveedor", class: 'form-label' %>
      <%= f.text_field :name, class: 'form-input', placeholder: "Ingresa el nombre del proveedor" %>
    </div>

    <div class="form-group">
      <%= f.label :contact_info, "Informaci贸n de Contacto", class: 'form-label' %>
      <%= f.text_field :contact_info, class: 'form-input', placeholder: "Ingresa la informaci贸n de contacto" %>
    </div>

    <div class="form-group">
      <%= f.label :address, "Direcci贸n", class: 'form-label' %>
      <%= f.text_field :address, class: 'form-input', placeholder: "Ingresa la direcci贸n del proveedor" %>
    </div>

    <div class="form-group" style="display: flex; justify-content: space-between; align-items: center;">
      <%= f.submit "Crear Proveedor", class: 'btn-submit' %>
      <%= link_to "<i class='fas fa-arrow-left' style='font-size: 24px;'></i> Volver a proveedores".html_safe, suppliers_path, class: 'btn-back btn-red' %>
    </div>

  <% end %>
</div>

<style>
  body {
    background-color: #f4f7fa;
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
  }

  h1 {
    color: #007BFF;
  }

  .form-container {
    margin: 20px auto;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    border: 2px solid rgba(0, 0, 0, 0.2);
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }

  .form-input {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 2px solid #ccc;
    border-radius: 5px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    resize: none;
    box-sizing: border-box;
  }

  .form-input:focus {
    border-color: #007BFF;
    box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
    outline: none;
  }

  .btn-submit {
    background-color: #28a745;
    color: black;
    padding: 10px 20px;
    border: 2px solid rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
    transition: background-color 0.3s ease, border-color 0.3s ease;
    margin-right: 10px;
  }

  .btn-submit:hover {
    background-color: #218838;
    border-color: rgba(0, 0, 0, 0.4);
  }

  .btn-back {
    padding: 10px 15px;
    border: 2px solid rgba(0, 0, 0, 0.2);
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    font-weight: bold;
    color: black;
    background-color: #dc3545;
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  .btn-back:hover {
    background-color: #c82333;
    border-color: rgba(0, 0, 0, 0.4);
  }

  .background-h1 {
    text-align: center;
    margin-bottom: 20px;
    font-family: 'Arial', sans-serif;
    color: white;
    background-color: rgba(0, 0, 0, 0.7);
    padding: 10px;
    border-radius: 5px;
  }
</style>
