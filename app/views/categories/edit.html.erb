<h1 style="text-align: center; margin-bottom: 20px;">Editando Categoría</h1>

<div class="form-container">
  <%= render "form", category: @category %>
</div>

<div class="action-links">
  <%= link_to "Ver esta categoría", @category, class: 'btn-show' %> |
  <%= link_to "Volver a categorías", categories_path, class: 'btn-back' %>
</div>

<!-- Modal para mostrar el mensaje de éxito -->
<div id="successModal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <p><%= flash[:notice] %></p>
  </div>
</div>

<style>
  body {
    background-color: #9fc0f5; /* Color de fondo */
    font-family: Arial, sans-serif; /* Fuente de texto */
  }

  h1 {
    color: #007BFF; /* Color del encabezado */
  }

  .form-container {
    margin: 20px auto; /* Centra el formulario */
    background-color: rgba(255, 255, 255, 0.9); /* Fondo blanco con opacidad */
    padding: 20px; /* Espaciado interno */
    border-radius: 8px; /* Bordes redondeados */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Sombra para profundidad */
    max-width: 600px; /* Ancho máximo */
  }

  .action-links {
    text-align: center; /* Centra los enlaces */
    margin-top: 20px; /* Espaciado superior */
  }

  .btn-show, .btn-back {
    background-color: #007BFF; /* Color azul para los botones */
    color: white;
    padding: 10px 15px; /* Espaciado interno de los botones */
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none; /* Elimina subrayado */
    display: inline-block; /* Alinea en línea */
    margin: 5px; /* Espacio entre botones */
  }

  .btn-show:hover, .btn-back:hover {
    background-color: #0056b3; /* Color más oscuro al pasar el mouse */
  }

  /* Estilos para el modal */
  .modal {
    display: none; /* Oculto por defecto */
    position: fixed; /* Queda fijo en la pantalla */
    z-index: 1; /* Por encima de otros elementos */
    left: 0;
    top: 0;
    width: 100%; /* Ancho completo */
    height: 100%; /* Alto completo */
    overflow: auto; /* Scroll si es necesario */
    background-color: rgb(0, 0, 0); /* Color de fondo */
    background-color: rgba(0, 0, 0, 0.4); /* Fondo con opacidad */
  }

  .modal-content {
    background-color: #fefefe; /* Fondo blanco */
    margin: 15% auto; /* Espaciado vertical y centrado */
    padding: 20px; /* Espaciado interno */
    border: 1px solid #888; /* Borde gris */
    width: 80%; /* Ancho del modal */
    max-width: 500px; /* Ancho máximo */
    border-radius: 8px; /* Bordes redondeados */
  }

  .close-button {
    color: #aaa; /* Color gris para el botón de cerrar */
    float: right; /* A la derecha */
    font-size: 28px; /* Tamaño del texto */
    font-weight: bold; /* Negrita */
  }

  .close-button:hover,
  .close-button:focus {
    color: black; /* Color negro al hacer hover o foco */
    text-decoration: none; /* Elimina subrayado */
    cursor: pointer; /* Manita */
  }
</style>

<script>
  window.onload = function() {
    // Mostrar el modal si hay un mensaje de éxito
    if ("<%= flash[:notice].present? %>") {
      document.getElementById("successModal").style.display = "block";
    }

    // Cerrar el modal al hacer clic en el botón de cerrar
    document.querySelector(".close-button").onclick = function() {
      document.getElementById("successModal").style.display = "none";
    }

    // Cerrar el modal al hacer clic en cualquier parte fuera del modal
    window.onclick = function(event) {
      var modal = document.getElementById("successModal");
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
  }
</script>
