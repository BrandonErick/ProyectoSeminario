<h1 style="text-align: center; margin-bottom: 20px; font-family: 'Arial', sans-serif; color: white;" class="background-h1">Crear producto</h1>

<div class="form-container">
  <%= render "form", product: @product %>
</div>

<div class="action-links">
  <%= link_to "Ver este producto", @product, class: 'btn-show' %> |
  <%= link_to "Volver a productos", products_path, class: 'btn-back' %>
</div>

<div id="successModal" class="modal" style="display: none;">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <p><%= flash[:notice] %></p>
  </div>
</div>

<style>
  body {
    background-color: #9fc0f5;
    font-family: Arial, sans-serif;
  }

  h1 {
    color: #007BFF;
  }

  .form-container {
    margin: 20px auto;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    max-width: 600px;
  }

  .action-links {
    text-align: center;
    margin-top: 20px;
  }

  .btn-show {
    background-color: #FFD700; /* Color amarillo oscuro */
    color: black; /* Texto en negro */
    font-weight: bold; /* Texto en negritas */
    padding: 10px 15px;
    border: 2px solid #A89C00; /* Contorno semi oscuro */
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    margin: 5px;
  }

  .btn-back {
    background-color: #FF4500; /* Color rojo */
    color: black; /* Texto en negro */
    font-weight: bold; /* Texto en negritas */
    padding: 10px 15px;
    border: 2px solid #A30000; /* Contorno semi oscuro */
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    margin: 5px;
  }

  .btn-show:hover {
    background-color: #FFC300; /* Color amarillo más claro */
  }

  .btn-back:hover {
    background-color: #FF6347; /* Color rojo más claro */
  }

  .btn-submit {
    background-color: #28a745; /* Color verde */
    color: white; /* Texto en blanco */
    font-weight: bold; /* Texto en negritas */
    padding: 10px 15px;
    border: 2px solid #218838; /* Contorno semi oscuro */
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    margin-top: 20px; /* Espacio superior */
  }

  .btn-submit:hover {
    background-color: #218838; /* Verde más oscuro */
  }

  .modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0, 0, 0);
    background-color: rgba(0, 0, 0, 0.4);
  }

  .modal-content {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 500px;
    border-radius: 8px;
  }

  .close-button {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close-button:hover,
  .close-button:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }
</style>
